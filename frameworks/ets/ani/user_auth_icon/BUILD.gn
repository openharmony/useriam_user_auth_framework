import("//build/config/components/ets_frontend/ets2abc_config.gni")
import("//build/ohos.gni")

generate_static_abc("user_auth_icon_ets_abc") {
  base_url = "./"
  files = [ "./@ohos.userIAM.userAuthIcon.ets" ]
  ui_enable = "True"
  is_boot_abc = "True"
  device_dst_file = "/system/framework/user_auth_icon_ets_abc.abc"
  dst_file = target_out_dir + "/user_auth_icon_ets_abc/modules_static.abc"
  out_puts = [ target_out_dir + "/user_auth_icon_ets_abc/modules_static.abc" ]
}

ohos_copy("copy_user_auth_icon_ets_abc") {
  sources = [
    target_out_dir + "/user_auth_icon_ets_abc/modules_static.abc"
  ]
  outputs = [
    target_out_dir + "/user_auth_icon_ets_abc.abc"
  ]
  deps = [ ":user_auth_icon_ets_abc" ]
}

ohos_prebuilt_etc("user_auth_icon_ets_abc_etc") {
  source = "$target_out_dir/user_auth_icon_ets_abc.abc"
  module_install_dir = "framework"
  subsystem_name = "useriam"
  part_name = "user_auth_framework"
  deps = [ ":copy_user_auth_icon_ets_abc" ]
}

group("user_auth_icon_ani"){
    deps = [":user_auth_icon_ets_abc_etc"]
}